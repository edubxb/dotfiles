[init]
	templatedir = ~/.config/git/template/
[core]
	excludesfile = ~/.config/git/ignore
[pull]
	rebase = true
[push]
	default = simple
[diff]
	tool = vimdiff
	compactionHeuristic = true
	algorithm = minimal
[difftool "vimdiff"]
	prompt = false
	path = /usr/bin/nvim
[difftool "icdiff"]
	cmd = icdiff --line-numbers --no-bold \"${LOCAL}\" \"${REMOTE}\" | ${PAGER}
[merge]
	tool = fugitive
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[github]
	user = edubxb
[alias]
	icdiff = difftool --tool icdiff
[log]
	date = format:%F %R
[pretty]
	simpleline = %C(bold)%m %h%Creset %C(cyan)%ad %Creset%s
[user]
	useconfigonly = true
