[init]
	templatedir = ~/.config/git/template/
[core]
	excludesfile = ~/.config/git/ignore
[user]
	useconfigonly = true
[github]
	user = edubxb
[pull]
	rebase = true
[push]
	default = simple
[diff]
	algorithm = minimal
	;compactionHeuristic = true
	indentHeuristic = true
	tool = vimdiff
[difftool "vimdiff"]
	prompt = false
[difftool "cdiff"]
	cmd = cdiff --side-by-side --width=0 --color=auto \"${LOCAL}\" \"${REMOTE}\"
[difftool "icdiff"]
	;cmd = icdiff --line-numbers --highlight --no-bold --tabsize=4 \"${LOCAL}\" \"${REMOTE}\" | ${PAGER}
	cmd = icdiff --line-numbers --highlight --tabsize=4 \"${LOCAL}\" \"${REMOTE}\" | ${PAGER}
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[log]
	date = format:%F %R
[pretty]
	simpleline = %C(bold)%m %h%Creset %C(cyan)%ad %Creset%s
[interactive]
	diffFilter = /usr/share/doc/git/contrib/diff-highlight/diff-highlight
[pager]
	diff = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | ${PAGER}
	log = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | ${PAGER}
	show = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | ${PAGER}
[alias]
	aliases = config --get-regexp alias
	amend = commit --amend --reuse-message=HEAD
	cdiff = difftool --tool cdiff
	fixup = commit --fixup
	icdiff = difftool --tool icdiff
	rebaseme = "!f() { local ref=\"master\"; [ -n \"$1\" ] && ref=\"$1\"; git rebase --autosquash -i $(git merge-base \"${ref}\" HEAD); }; f"
	stash-all = stash save --include-untracked
	squash = commit --squash
	trackme = "!f() { local remote=\"origin\"; [ -n \"$1\" ] && remote=\"$1\"; git push -u \"${remote}\" $(git rev-parse --abbrev-ref HEAD); }; f"
	trl = "!git reflog --pretty=raw | tig --pretty=raw"
	wip = "!f() { git commit -m \"WIP: $1\"; }; f"
[color "branch"]
	current = 229 bold
	local = 229
	remote = normal
[color "grep"]
	match = 11 bold
[color "interactive"]
	error = normal
	header = normal bold
	help = normal
	prompt = normal bold
[color "status"]
	branch = 229 bold
	changed = 98
	nobranch = 229 bold
[includeIf "gitdir:~/Area51/personal/"]
	path = ~/.config/git/config.personal
[includeIf "gitdir:~/Area51/floss/"]
	path = ~/.config/git/config.personal
[includeIf "gitdir:~/Area51/work/"]
	path = ~/.config/git/config.work
