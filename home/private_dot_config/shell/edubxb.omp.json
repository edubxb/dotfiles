{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "lightBlue",
          "style": "plain",
          "template": "{{ if .SSHSession }}{{ .UserName }}@{{ .HostName }}{{ end }} ",
          "type": "session"
        },
        {
          "foreground": "white",
          "properties": {
            "branch_icon": " ",
            "fetch_status": true,
            "fetch_stash_count": true,
            "commit_icon": "",
            "tag_icon": " "
          },
          "style": "plain",
          "template": "<b><d>{{ .HEAD }}</d></b>{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0}}  {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }} ",
          "type": "git"
        },
        {
          "foreground": "white",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ if .Segments.Git.Dir }}<b>{{ .Segments.Git.RepoName }}<d>{{ .PWD | replace .Segments.Git.Dir \"\" }} </d></b>{{ else }}<b>{{ .PWD }}</b>{{ end }}",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "project",
          "style": "plain",
          "foreground": "yellow",
          "template": "<b> {{ if .Name }}{{ .Name }}{{ end }}{{ if .Error }}{{ .Error }}{{ else }}{{ if .Version }}:{{.Version}}{{ end }}{{ end }}</b> "
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "style": "plain",
          "foreground": "yellow",
          "template": "<b> {{ .WorkspaceName }}{{ if .Version }}{{ .Version }}{{ end }}</b> ",
          "properties": {
            "fetch_version": true
          },
          "type": "terraform"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "style": "plain",
          "foreground": "green",
          "template": "<b> {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }}</b> ",
          "properties": {
            "display_mode": "context"
          },
          "type": "python"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "foreground": "white",
          "template": " {{ .FormattedMs }}",
          "properties": {
            "threshold": 30000,
            "style": "round"
          },
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "red",
          "template": "{{ if gt .Code 0 }}{{ .Code }}{{ end }} ",
          "properties": {
            "always_enabled": false
          }
        },
        {
          "foreground": "white",
          "style": "plain",
          "template": "",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "tooltips": [
    {
      "foreground": "#3381e3",
      "style": "plain",
      "template": " <i>{{ .Context }}{{ if .Namespace }} :: {{ .Namespace }}{{ end }}</i>",
      "tips": [
        "kube",
        "kubectl",
        "kubenctx"
      ],
      "type": "kubectl"
    },
    {
      "foreground": "#FF9900",
      "style": "plain",
      "properties": {
        "display_default": true
      },
      "template": "  <i>{{ .Profile }}{{ if .Region }} :: {{ .Region }}{{ end }}</i>",
      "tips": [
        "aws"
      ],
      "type": "aws"
    },
    {
      "foreground": "#1A73E8",
      "style": "plain",
      "template": "  <i>{{ .Account }} :: {{ .Project }} :: {{ .Region }}</i>",
      "tips": [
        "gcloud",
        "gsutil"
      ],
      "type": "gcp"
    }
  ],
  "transient_prompt": {
    "foreground": "white",
    "template": " {{ now | date \"15:04:05\" }}  "
  },
  "final_space": true,
  "version": 2
}
